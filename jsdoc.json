{
  "source": {
    "include": ["pages", "components", "models", "lib"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "tags": {
    "allowUnknownTags": ["category", "component", "optional"]
  },
  "plugins": ["plugins/markdown", "node_modules/better-docs/component", "node_modules/better-docs/category"],
  "opts": {
    "recurse": true,
    "readme": "./README.md",
    "destination": "./docs/",
    "verbose": true,
    "template": "node_modules/better-docs"
  }
}
